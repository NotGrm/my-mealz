<nav class="flex justify-center items-center mb-6">
  <%= link_to meal_path(@day - 1.day), class: "text-indigo-dark px-3" do %>
    <i class="fas fa-chevron-left fa-lg"></i>
  <% end %>
  <div class="text-center uppercase">
    <p>
      <%= time_tag @day, class: "text-xl font-semibold px-3" %>
    </p>
  </div>
  <%= link_to meal_path(@day + 1.day), class: "text-indigo-dark px-3" do %>
    <i class="fas fa-chevron-right fa-lg"></i>
  <% end %>
</nav>

<% if notice %>
  <div class="mb-4">
    <div class="flex items-center bg-green text-white text-sm font-bold px-4 py-3">
      <i class="fas fa-check w-4 h-4 mr-2"></i>
      <p><%= notice %></p>
    </div>
  </div>
<% end %>


<%= link_to logout_path, method: :delete, class: 'fixed pin-b pin-r mr-4 mb-4 rounded-full h-12 w-12 flex items-center justify-center bg-red-light text-white shadow-lg' do %>
  <i class="fas fa-sign-out-alt fa-lg"></i>
<% end %>

<div class="mb-16">
  <%= render "day_meals", meals: @meals, day: @day %>
</div>

